@model ViewModels.Areas.Administrator.BankAccount.EditViewModel
@{
    string strTitle =
        string.Format("{0} {1}",
        Resources.Action.Edit,
        Resources.Model.BankAccount.EntitiesName);
}

@using (Html.BeginForm("Edit", "BankAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    if (ViewBag.PageMessages != null && ViewBag.PageMessages != string.Empty)
    {
        <div class="panel panel-primary">
            <div class="panel-heading">
                پیام های سیستمی
            </div>
            <div class="panel-body">
                @Html.Raw(ViewBag.PageMessages)
            </div>
        </div>
    }
    <div class="panel panel-primary">
        <div class="panel-heading">
            @strTitle
        </div>
        <div class="panel-body">
            @Html.HiddenFor(model=>model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Bank, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.Bank, null, Resources.Caption.SelectAnItem, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Bank)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Certain, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.Certain, null, Resources.Caption.SelectAnItem, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Certain)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ExecutableCode, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.ExecutableCode, null, Resources.Caption.SelectAnItem, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ExecutableCode)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IncomeRow, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.IncomeRow, null, Resources.Caption.SelectAnItem, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IncomeRow)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AccountTitel, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.AccountTitel, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(model => model.AccountTitel)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AccountNumber, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(model => model.AccountNumber)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <input type="submit" value="@Resources.Buttons.Save" class="btn btn-success" />
                    <input type="submit" value="@Resources.Buttons.Reset" class="btn btn-primary" />
                </div>
            </div>

        </div>

        <div class="panel-footer">
            @Html.ActionLink(Resources.Action.Details, MVC.Administrator.BankAccount.Detail(Model.Id), new { @class = "btn btn-primary " })
            @*@Html.ActionLink(Resources.Action.Delete, MVC.Administrator.BankAccount.Delete(Model.Id), new { @class = "btn btn-danger" })*@
            @Html.ActionLink(Resources.Action.BackToList, MVC.Administrator.BankAccount.Index(), new { @class = "btn btn-default" })

            <a class="btn btn-default col-md-2" data-toggle="tooltip" data-placement="top" title="@(Resources.Action.BackToMain)"
               href="/HomeMain/Main/" style="float:left;"><span style="float:right;">@Resources.Action.BackToMain</span><img style="float:left;" src='../../../Content/Icon/Back.png' /></a>
            <br />
            <br />
        </div>
    </div>
}