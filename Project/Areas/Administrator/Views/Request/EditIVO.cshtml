    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div id="ModelBody" class="modal-body">
                ...
            </div>
            <div id="ModalFooter" class="modal-footer">
                <div class="row">
                    <ul class="list-inline"></ul>
                </div>
            </div>
        </div>
    </div>
</div>
