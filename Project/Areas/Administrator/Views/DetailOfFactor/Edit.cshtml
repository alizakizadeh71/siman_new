@model ViewModels.Areas.Administrator.DetailOfFactor.EditViewModel
@{
    string strTitle =
        string.Format("{0} {1}",
        Resources.Action.Edit,
        Resources.Model.DetailOfFactor.EntitiesName);
}

@using (Html.BeginForm("Edit", "DetailOfFactor", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="panel panel-primary">
        <div class="panel-heading">
            @strTitle
        </div>
        <div class="panel-body">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.HeadOfFactor)

            <div class="form-group">
                @Html.LabelFor(model => model.ServiceTariff, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.ServiceTariff, null, Resources.Caption.SelectAnItem, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ServiceTariff)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CommodityDescription, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.CommodityDescription, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(model => model.CommodityDescription)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CommodityCount, new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.CommodityCount, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(model => model.CommodityCount)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <br />
            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <input type="submit" value="@Resources.Buttons.Save" class="btn btn-success" />
                    <input type="submit" value="@Resources.Buttons.Reset" class="btn btn-primary" />
                </div>
            </div>

        </div>

        <div class="panel-footer">
            @Html.ActionLink(Resources.Action.Details, MVC.Administrator.DetailOfFactor.Details(Model.Id), new { @class = "btn btn-primary " })
            @Html.ActionLink(Resources.Action.BackToList, MVC.Administrator.DetailOfFactor.Index(Model.HeadOfFactor), new { @class = "btn btn-default" })

            <a class="btn btn-default col-md-2" data-toggle="tooltip" data-placement="top" title="@(Resources.Action.BackToMain)"
               href="/HomeMain/Main/" style="float:left;"><span style="float:right;">@Resources.Action.BackToMain</span><img style="float:left;" src='../../../Content/Icon/Back.png' /></a>
            <br />
            <br />
        </div>
    </div>
}