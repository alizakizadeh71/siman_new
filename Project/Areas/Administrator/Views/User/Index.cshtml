@model ViewModels.Areas.Administrator.User.SearchViewModel

@{
    ViewBag.Title = "فهرست کاربران";
    Layout = "~/Views/Shared/_Layouts/_Site.cshtml";

    // 🟢 گرفتن شماره صفحه فعلی از QueryString
    int currentPage = 1;
    string pageQuery = Request.QueryString["page"];
    if (!string.IsNullOrEmpty(pageQuery))
    {
        int tmpPage;
        if (int.TryParse(pageQuery, out tmpPage) && tmpPage > 0)
        {
            currentPage = tmpPage;
        }
    }
}

<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<style>

    /* ==== بک‌گراند کلی صفحه ==== */
    body {
        background: linear-gradient(135deg, #e0f0ff, #f8fbff);
        font-family: "IRANSans", "Tahoma", sans-serif;
        color: #333;
        direction: rtl;
        margin: 0;
        padding: 20px;
    }

    /* ==== کانتینر کل جدول و عنوان ==== */
    .page-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px 20px 20px; /* فاصله از بالا */
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    }

    .page-title {
        margin-top: 0;
        margin-bottom: 15px;
        font-size: 24px;
        color: #007bff;
    }

    /* ==== ساختار جدید دکمه‌ها ==== */
    .action-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .action-group-left,
    .action-group-right {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    /* ==== استایل عمومی دکمه‌ها ==== */
    .action-buttons a.btn {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
        text-decoration: none;
        transition: 0.2s;
        box-shadow: 0 1px 4px rgba(0,0,0,0.1);
    }

        .action-buttons a.btn img {
            width: 16px;
            height: 16px;
        }

    /* ==== دکمه ایجاد کاربر جدید ==== */
    .btn-create {
        background-color: #17a2b8;
        color: #fff;
    }

        .btn-create:hover {
            background-color: #138496;
        }

    /* ==== دکمه اکسل ==== */
    .btn-excel {
        background-color: #28a745;
        color: #fff;
    }

        .btn-excel:hover {
            background-color: #218838;
        }

    /* ==== دکمه بازگشت ==== */
    .btn-back {
        background-color: #007bff;
        color: #fff;
    }

        .btn-back:hover {
            background-color: #0056b3;
        }

    /* ==== کانتینر جدول با اسکرول افقی ==== */
    .table-responsive-wrapper {
        width: 100%;
        overflow-x: auto;
    }

    /* ==== جدول ==== */
    table.dataTable {
        width: max-content;
        min-width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        table-layout: auto;
        box-sizing: border-box;
    }

        table.dataTable thead th {
            background: linear-gradient(135deg, #007bff, #00a8ff);
            color: #fff;
            text-align: center;
            font-weight: 500;
            font-size: 14px;
            padding: 10px;
            box-sizing: border-box;
            white-space: nowrap;
        }

        table.dataTable tbody td {
            text-align: center;
            font-size: 13px;
            padding: 9px 6px;
            border-bottom: 1px solid #f0f0f0;
            box-sizing: border-box;
            word-break: break-word;
            max-width: 120px;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        table.dataTable tbody tr:hover {
            background-color: #f1f8ff;
            transition: background-color 0.2s ease-in-out;
        }

    /* ==== ستون عملیات ==== */
    td.action-icons {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        padding: 4px 0;
    }

        td.action-icons img {
            width: 28px;
            height: 28px;
            padding: 3px;
            border-radius: 5px;
            background-color: #f8f8f8;
            box-shadow: 0 1px 2px rgba(0,0,0,0.1);
            transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
        }

            td.action-icons img:hover {
                transform: scale(1.3);
                background-color: #007bff;
                box-shadow: 0 0 6px rgba(0,123,255,0.5);
                cursor: pointer;
            }

    /* ==== ستون مبلغ ==== */
    td.credit-column, th.credit-column {
        white-space: nowrap;
        max-width: 120px;
        text-align: center;
        padding: 6px 10px;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* ==== دکمه‌های معمول جدول ==== */
    .btn {
        border-radius: 8px;
        padding: 6px 14px;
        font-size: 13px;
        transition: 0.2s;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    /* ==== نسخه موبایل ==== */
    @@media (max-width: 768px) {
        .action-buttons {
            flex-direction: column;
            align-items: stretch;
            gap: 10px;
        }

        .action-group-left,
        .action-group-right {
            justify-content: center;
            width: 100%;
        }

            .action-group-left a.btn,
            .action-group-right a.btn {
                width: 100%;
                justify-content: center;
            }

        table.dataTable {
            border: none;
            box-shadow: none;
            width: 100%;
            background: transparent;
        }

            table.dataTable thead {
                display: none;
            }

            table.dataTable tbody tr {
                display: block;
                background: #ffffff;
                border-radius: 12px;
                box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
                margin-bottom: 15px;
                overflow: hidden;
                padding: 12px 16px;
                box-sizing: border-box;
                width: 100%;
            }

            table.dataTable tbody td {
                display: flex;
                justify-content: space-between;
                align-items: center;
                border: none;
                font-size: 14px;
                padding: 6px 0;
                flex-wrap: wrap;
                box-sizing: border-box;
                max-width: 100%;
            }

                table.dataTable tbody td::before {
                    content: attr(data-label);
                    font-weight: bold;
                    color: #007bff;
                    flex-basis: 45%;
                    text-align: right;
                    padding-right: 5px;
                    box-sizing: border-box;
                }

                table.dataTable tbody td.action-icons {
                    flex-direction: row;
                    justify-content: flex-start;
                    gap: 6px;
                    margin-top: 6px;
                    padding-top: 6px;
                }

            table.dataTable td.action-icons img {
                width: 24px;
                height: 24px;
            }

            table.dataTable tbody td.credit-column {
                max-width: 100%;
            }
    }
</style>


<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<div class="page-container">
    <h2 class="page-title">فهرست کاربران</h2>

    <div class="action-buttons">
        <div class="action-group-left">
            <a class="btn btn-success btn-create" href="/Administrator/User/Create/" title="ایجاد کاربر جدید">
                <img src='~/Content/Icon/Create.png' alt="Create" />
                <span>ایجاد کاربر جدید</span>
            </a>
            <a class="btn btn-excel" href="/Administrator/User/DownloadUserExcel/" title="اکسل">
                <img src='../../../Content/Images/Exel.png' alt="Excel" />
                <span>اکسل</span>
            </a>
        </div>
        <div class="action-group-right">
            <a class="btn btn-back" href="/HomeMain/Main/" title="بازگشت">
                <img src='../../../Content/Icon/Back.png' alt="Back" />
                <span>بازگشت</span>
            </a>
        </div>
    </div>

    <div class="table-responsive-wrapper">
        <table id="userTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>عملیات</th>
                    <th>نام کاربری</th>
                    <th>نام و نام خانوادگی</th>
                    <th>شماره تماس</th>
                    <th>نقش</th>
                    <th>استان</th>
                    <th>شهر</th>
                    <th>اعتبار</th>
                    <th>اعتبار اولیه</th>
                    <th>کد بازاریابی</th>
                    <th>کد معرف</th>
                    <th>تخفیف</th>
                    <th>فعال</th>
                    <th>آدرس</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap.min.js"></script>

<script>
$(document).ready(function () {

    const pageLength = 50;
    const startRecord = (@currentPage - 1) * pageLength;

    var table = $('#userTable').DataTable({
        ajax: {
            url: '/Administrator/User/GetUsers',
            type: 'POST'
        },
        language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fa.json' },
        responsive: true,
        pageLength: pageLength,
        displayStart: startRecord,
        columns: [
            { data: null },
            {
                data: null,
                className: "action-icons",
                render: function (row, type, data, meta) {
                    const currentPage = Math.floor(meta.row / meta.settings._iDisplayLength) + 1;
                    return `
                        <a href="/Administrator/User/Detail/${row.Id}" title="نمایش"><img src="../../../Content/Icon/display.png"/></a>
                        <a href="/Administrator/User/Edit/${row.Id}" title="ویرایش"><img src="../../../Content/Icon/edit.png"/></a>
                        <a href="/Administrator/User/DownloadUserExcelGetByid/${row.Id}" title="اکسل"><img src="../../../Content/Images/Exel.png"/></a>
                        <a href="/Administrator/User/Paymentwallet/${row.Id}?page=${currentPage}" title="شارژ"><img src="../../../Content/Icon/charge.png"/></a>
                        <a href="/Administrator/User/ChangePassword/${row.Id}" title="رمز"><img src="../../../Content/Icon/Password.png"/></a>
                    `;
                }
            },
            { data: "UserName" },
            { data: "FullName" },
            { data: "BuyerMobile" },
            { data: "Role" },
            { data: "Province" },
            { data: "City" },
            { data: "creditAmount", render: d => d ? parseInt(d).toLocaleString('fa-IR') : "0" },
            { data: "InitialCredit", render: d => d ? parseInt(d).toLocaleString('fa-IR') : "0" },
            { data: "MarketingCode" },
            { data: "ReferredByCode" },
            { data: "Discount" },
            { data: "IsActive", render: d => `<input type="checkbox" ${d ? 'checked' : ''} disabled />` },
            { data: "Address" }
        ],
        columnDefs: [{ orderable: false, targets: [0,1] }],
        order: [[3, 'asc']],
        rowCallback: function(row, data, index) {
            const info = table.page.info();
            $('td:eq(0)', row).html(info.start + index + 1);
        }
    });

    // هنگام تغییر صفحه، URL بروزرسانی شود
    table.on('page.dt', function () {
        const info = table.page.info();
        const newPage = info.page + 1;
        const url = new URL(window.location);
        url.searchParams.set('page', newPage);
        window.history.replaceState({}, '', url);
    });

});
</script>




