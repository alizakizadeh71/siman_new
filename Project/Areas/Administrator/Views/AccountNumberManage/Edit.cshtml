                    //$("#BaseAccountNumber") = data;
                    //$.each(data, function (i, city) {
                    //    $("#LocationCityId").append('<option value="' + city.Id + '"> ' + city.Name + '</option>')
                    //})
                }
            });
        }   
    </script>
}