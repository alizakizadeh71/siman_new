@model ViewModels.Account.LoginViewModel
@{
    ViewBag.Title = Resources.Action.Login;
}

<h2>@Resources.Action.Login</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginFrom">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>برای ورود به سیستم از نام کاربری اختصاصی خود استفاده نمایید.</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Captcha, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <img class="col-md-3" alt="Captcha" id="imgcpatcha" src="@Url.Action("CaptchaImage", "Account")" style="" />
                        <div class="col-md-2 btn btn-info" id="refresh">
                            <span>@Resources.OPS.Button.Refresh</span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.TextBoxFor(model => model.Captcha, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value='@Resources.OPS.Button.Login' class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            <h5>برای دریافت مشخصات حساب کاربری خود با واحد  IT سازمان تماس بگیرید </h5>
            <hr />
        </section>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#refresh').click(function () {
            $.ajax({
                url: '@Url.Action("CaptchaImage", "Account")',
                type: "GET",
                data: ""
            })
            .done(function (functionResult) {
                $("#imgcpatcha").attr("src", "/Account/CaptchaImage?" + functionResult);
            });
        });
    });
</script>
